                                <option value="0.02"
                                        {% if payment_blockbee_fees == "0.02" %}
                                            selected="selected"
                                        {% endif %}
                                >2%
                                </option>
                                <option value="0.018"
                                        {% if payment_blockbee_fees == "0.018" %}
