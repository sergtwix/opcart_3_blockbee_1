                                <option value="0.0040"
                                        {% if payment_blockbee_fees == "0.0040" %}
                                            selected="selected"
                                        {% endif %}
                                >0.40%
                                </option>
                                <option value="0.0030"
                                        {% if payment_blockbee_fees == "0.0030" %}
                                            selected="selected"
                                        {% endif %}
                                >0.30%
                                </option>
                                <option value="0.0025"
                                        {% if payment_blockbee_fees == "0.0025" %}
                                            selected="selected"
                                        {% endif %}
                                >0.25%
                                </option>
                                <option value="0"
                                        {% if payment_blockbee_fees is empty or payment_blockbee_fees == '0' %}
                                            selected="selected"
                                        {% endif %}
                                >0%
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="blockbee_qrcode_size">{{ qrcode_size }}</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="blockbee_qrcode_size" name='payment_blockbee_qrcode_size'
                                   {% if payment_blockbee_qrcode_size is empty %}value="300" {% else %}value="{{ payment_blockbee_qrcode_size }}"{% endif %}>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="blockbee_qrcode_default">
                            {{ qrcode_default }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_blockbee_qrcode_default" id="blockbee_qrcode_default" class="form-control">
                                {% if payment_blockbee_qrcode_default is empty or payment_blockbee_qrcode_default != '0' %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% elseif payment_blockbee_branding == 1 %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% elseif payment_blockbee_branding == 0 %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="blockbee_qrcode">
                            <span data-toggle="tooltip" title="{{ text_qrcode }}">
                               {{ qrcode }}
                            </span>
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_blockbee_qrcode" id="blockbee_qrcode" class="form-control">
                                <option value="without_ammount"
                                        {% if payment_blockbee_qrcode is empty or payment_blockbee_qrcode == 'without_ammount' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ qrcode_without_ammount }}</option>
                                <option value="ammount"
                                        {% if payment_blockbee_qrcode == 'ammount' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ qrcode_ammount }}</option>
                                <option value="hide_ammount"
                                        {% if payment_blockbee_qrcode == 'hide_ammount' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ qrcode_hide_ammount }}</option>
                                <option value="hide_without_ammount"
                                        {% if payment_blockbee_qrcode == 'hide_without_ammount' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ qrcode_hide_without_ammount }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="blockbee_color_scheme">
                            {{ color_scheme }}
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_blockbee_color_scheme" id="blockbee_color_scheme" class="form-control">
                                <option value="light"
                                        {% if payment_blockbee_color_scheme is empty or payment_blockbee_color_scheme == 'light' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ scheme_light }}</option>
                                <option value="dark"
                                        {% if payment_blockbee_color_scheme == 'dark' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ scheme_dark }}</option>
                                <option value="auto"
                                        {% if payment_blockbee_color_scheme == 'auto' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ scheme_auto }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="blockbee_refresh_values">
                            <span data-toggle="tooltip" title="{{ text_refresh_values }}">
                               {{ refresh_values }}
                            </span>
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_blockbee_refresh_values" id="blockbee_refresh_values" class="form-control">
                                <option value="0"
                                        {% if payment_blockbee_refresh_values == '0' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ never }}
                                </option>
                                <option value="300"
                                        {% if payment_blockbee_refresh_values is empty or payment_blockbee_refresh_values == '300' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ five_minutes }}
                                </option>
                                <option value="600"
                                        {% if payment_blockbee_refresh_values == '600' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ ten_minutes }}
                                </option>
                                <option value="900"
                                        {% if payment_blockbee_refresh_values == '900' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ fifteen_minutes }}
                                </option>
                                <option value="1800"
                                        {% if payment_blockbee_refresh_values == '1800' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ thirty_minutes }}
                                </option>
                                <option value="2700"
                                        {% if payment_blockbee_refresh_values == '2700' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ forty_five_minutes }}
                                </option>
                                <option value="3600"
                                        {% if payment_blockbee_refresh_values == '3600' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ sixty_minutes }}
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="blockbee_order_cancelation_timeout">
                            <span data-toggle="tooltip" title="{{ text_order_cancelation_timeout }}">
                               {{ order_cancelation_timeout }}
                            </span>
                        </label>
                        <div class="col-sm-10">
                            <select name="payment_blockbee_order_cancelation_timeout" id="blockbee_order_cancelation_timeout" class="form-control">
                                <option value="0"
                                        {% if payment_blockbee_order_cancelation_timeout == '0' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ never }}
                                </option>
                                <option value="3600"
                                        {% if payment_blockbee_order_cancelation_timeout is empty or payment_blockbee_order_cancelation_timeout == '3600' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ one_hour }}
                                </option>
                                <option value="21600"
                                        {% if payment_blockbee_order_cancelation_timeout == '21600' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ six_hours }}
                                </option>
                                <option value="43200"
                                        {% if payment_blockbee_order_cancelation_timeout == '21600' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ twelve_hours }}
                                </option>
                                <option value="64800"
                                        {% if payment_blockbee_order_cancelation_timeout == '64800' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ eighteen_hours }}
                                </option>
                                <option value="86400"
                                        {% if payment_blockbee_order_cancelation_timeout == '86400' %}
                                            selected="selected"
                                        {% endif %}
                                >{{ twenty_four_hours }}
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                        <div class="col-sm-10">
                            <select name="payment_blockbee_standard_geo_zone_id" id="input-geo-zone" class="form-control">
                                <option value="0">{{ text_all_zones }}</option>
                                {% for geo_zone in geo_zones %}
                                    {% if geo_zone.geo_zone_id == payment_blockbee_standard_geo_zone_id %}
                                        <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                                    {% else %}
                                        <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_blockbee_order_status_id" id="input-order-status" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_blockbee_order_status_id %}
                                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_blockbee_sort_order" value="{{ payment_blockbee_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order"
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="blockbee_blockbee_api_key">
                            {{ api_key }}
                        </label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="blockbee_blockbee_api_key" name='payment_blockbee_api_key'
                                   {% if payment_blockbee_api_key is empty %}value="" {% else %}value="{{ payment_blockbee_api_key }}"{% endif %}>
                            <p class="mt-2">
                                {{ api_key_info }}
                            </p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row mb-3 justify-content-center">
                            <div class="col-12 text-center" style="margin-bottom: 20px">
                                <label class="control-label text-center" style="float: none !important;">
                                    {{ entry_cryptocurrencies }}
                                </label>
                                <p>
                                    {{ help_cryptocurrencies }}
                                </p>
                            </div>
                            <input type="hidden" id="blockbee_cryptocurrencies_array_cache" name="payment_blockbee_cryptocurrencies_array_cache"
                                value='{{ payment_blockbee_cryptocurrencies_array|json_encode() }}'>
                            <div class="col-sm-12 text-center "> 
                            
                                    <select name="payment_blockbee_cryptocurrencies[]" multiple="multiple" size="10" id="payment_cry" class="form-select">
                                        {% for ticker, coin in payment_blockbee_cryptocurrencies_array %}
                                            <option value='{{ ticker }}'
                                                {{ payment_blockbee_cryptocurrencies[ticker]  is defined and payment_blockbee_cryptocurrencies[ticker]  == ticker ? 'selected="selected"' : '' }}
                                                >{{ coin['name'] }}
                                        </option>
                                        {% endfor %}                                            
                                    </select>   
                            </div>        
                        </div>      
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ disable_conversion }}</label>
                        <div class="col-sm-10">
                            <input type='checkbox' name='payment_blockbee_disable_conversion' id="blockbee_disable_conversion"
                                   value='1' {{ payment_blockbee_disable_conversion is defined and payment_blockbee_disable_conversion == 1 ? 'checked="checked"' : '' }} />
                            <p><strong>{{ disable_conversion_warn_bold }}</strong>
                                {{ disable_conversion_warn }}</p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}